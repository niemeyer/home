#!/bin/sh

set -e

LEVEL=$1
if [ -z "$LEVEL" ]; then
	LEVEL=1
fi

governor() {
	for i in `seq 0 3`; do
		FILE=/sys/devices/system/cpu/cpu$i/cpufreq/scaling_governor
		if [ -f $FILE ]; then 
			echo $1 | sudo tee $FILE > /dev/null
		fi
	done
}

online() {
	for i in `seq 1 3`; do
		FILE=/sys/devices/system/cpu/cpu$i/online
		if [ `cat $FILE` != $1 ]; then
			echo $1 | sudo tee /sys/devices/system/cpu/cpu$i/online > /dev/null
		fi
	done
}

case $LEVEL in
	"-1")
		online 1
		governor performance
		;;
	"0")
		online 1
		governor ondemand
		;;
	"1")
		online 1
		governor powersave
		;;
	"2")
		online 0
		governor powersave
		;;
esac
